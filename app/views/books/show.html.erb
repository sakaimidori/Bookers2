<!--ユーザー情報-->
<h2>User info</h2>
  <p><%= image_tag @book.user.get_profile_image(100,100) %></p>
  <table>
    <tr>
      <th>name</th>
      <th><%= @book.user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= @book.user.name %> </th>
  </table>


<!--投稿機能-->
<h2>New book</h2>
  <%= form_with model:Book.new do |f| %>

    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Opinion</h4>
      <%= f.text_area :body %><br />
    <%= f.submit 'Create Book' %>

  <% end %>

<!--投稿の詳細-->
<h2>Book detail</h2>
  <table>
    <td>ユーザー画像</td>
    <td>
      <%= link_to book_path(@book.id) do %>
        <%= @book.title %>
      <% end %>
    </td>
    <td><%= @book.body %></td>
    <td><% if @book.user == current_user %>
          <%= link_to "Edit", edit_book_path(@book) %>
        <% end %>
    </td>
    <td><% if @book.user == current_user %>
          <%= link_to "Destroy", book_path(@book),method: :delete %>
        <% end %>
    </td>
  </table>