<h2>User info</h2>

<!--バリデーションエラーめっせーじ-->

<% if @user.errors.any? %>
  <%= @user.errors.count %>error prohibited this obj from being saved:
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>


<!--編集機能-->

<%= form_with model:@user do |f| %>
  <div class= "user_name">Name</label>
  <%= f.text_field:name %>
  <div class= "user_image">Image</label>
  <%= f.file_field:profile_image,accept:"image/*" %>
  <div class= "user_introduction">Introduction</label>
  <%= f.text_area:introduction %>
  <%= f.submit "Update User" %>
<% end %>