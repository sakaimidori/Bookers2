<h2>User info</h2>

<%= form_with model:@user do |f| %>
  <div class= "user_name">Name</label>
  <%= f.text_field:name %>
  <div class= "user_image">Image</label>
  <%= f.file_field:profile_image,accept:"image/*" %>
  <div class= "user_introduction">Introduction</label>
  <%= f.text_area:introduction %>
  <%= f.submit "Update User" %>
<% end %>