<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2 class="mt-3">User info</h2>

    <!--バリデーションエラーめっせーじ-->

      <% if @user.errors.any? %>
        <h3><%= @user.errors.count %>error prohibited this obj from being saved:</h3>
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>


      <!--編集機能-->
      <%= form_with model:@user do |f| %>
        <div class="form-group">
          <label for= "user_name">Name</label>
          <div><%= f.text_field:name,class:"font-controll-name" %></div>
        </div>
        <div class="form-group">
          <label for="user_image">Image</label>
          <div><%= f.file_field:profile_image,accept:"image/*" %></div>
        </div>
        <div class="form-group">
          <label for="user_introduction">Introduction</label>
          <div><%= f.text_area:introduction %></div>
        </div>
        <div class="form-group">
          <div><%= f.submit "Update User",class:"btn btn-secondary" %></div>
        </div>
      <% end %>

    </div>
  </div>
</div>