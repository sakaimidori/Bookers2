<!--ユーザー情報-->
<h2>User info</h2>
  <p><%= image_tag @user.get_profile_image(100,100) %></p>
  <table>
    <tr>
      <th>name</th>
      <th><%= @user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= @user.introduction %></th>
    </tr>
  </table>



<!--投稿機能-->
<h2>New book</h2>
  <%= form_with model: @book do |f| %>
    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Opinion</h4>
      <%= f.text_area :body %><br />
    <%= f.submit 'Create Book' %>
  <% end %>





<!--ユーザーの投稿一覧-->
<h2>Books</h2>
  <table>
    <tr>
      <th>Title</th>
      <th>Opinion</th>
    </tr>

    <% @books.each do |book| %>
      <tr>
        <td><%= link_to book_path(book.id) do %>
              <%= book.title %>
            <% end %>
        </td>
        <td><%= book.body %></td>
      </tr>
    <% end %>
  </table>



